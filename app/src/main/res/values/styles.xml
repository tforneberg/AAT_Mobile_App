<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="Theme.PreferenceFixTheme" parent="@style/PreferenceFixTheme.Light.NoActionBar">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="BlueButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="OrangeButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="colorAccent">@color/colorAccent2</item>
    </style>

    <style name="PurpleButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="colorAccent">@color/colorAccent3</item>
    </style>

</resources>
